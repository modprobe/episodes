%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= "#{show.name} :: Random Episode Generator"
    %link{'rel': 'stylesheet', 'href': '/result.css'}
    %link{'href': 'http://fonts.googleapis.com/css?family=Open+Sans', 'rel': 'stylesheet'}
    %link{'href': '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', 'rel': 'stylesheet'}
    %script{'src': 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'}

  %body
    .top-level
      #randomepisode
        %h1= "\"#{episode.title}\""
        %h3= "(#{episode.season}&times;#{episode.episode_number})"
      #actions
        %button#newepisode
          %i{'class': 'fa fa-refresh'}
        %button#backtosearch
          %i{'class': 'fa fa-search'}

    :javascript
      $(document).ready(function() {
          $('#newepisode').click(function() {
            $('#newepisode i').toggleClass('fa-spin');
            $.ajax({
              url: '/api/random/#{show.sid}',
              type: 'GET',
              dataType: 'json',
              timeout: 60000,
              error: function() {
                  $('#newepisode').toggleClass('fa-spin');
                  return false;
              },
              success: function(msg) {
                  $('#randomepisode h1').html(msg.title);
                  $('#randomepisode h3').html("(" + msg.episode_no + ")");
                  $('#newepisode i').toggleClass('fa-spin');
                  return true;
              }
            });
          });

          $('#backtosearch').click(function() {
              window.location.href = '/'
          });
      });
